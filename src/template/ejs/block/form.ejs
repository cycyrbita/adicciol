<form class="form">
    <div class="form__title">ORDENAR ADICCIÓL AHORA</div>
    <div class="form__price">
        <div class="form__price-old">1580 MXN</div>
        <div class="form__price-new">790 MXN</div>
    </div>
    <label class="form__label">
        <div class="form__label-name">México</div>
        <select class="form__field form__select"></select>
    </label>
    <label class="form__label">
        <div class="form__label-name">Nombre</div>
        <input type="text" class="form__field">
    </label>
    <label class="form__label">
        <div class="form__label-name">Teléfono</div>
        <input type="text" class="form__field">
    </label>
    <button type="submit" class="form__btn btn">Ordenar ahora</button>
    <div class="form__time">
        <div class="form__time-title">Para el final de la promoción resta:</div>
        <div class="form__time-body">
            <div class="form__time-item">
                <span>00</span>
                <span>horas</span>
            </div>
            <div class="form__time-item">
                <span>12</span>
                <span>minutos</span>
            </div>
            <div class="form__time-item">
                <span>00</span>
                <span>segundos</span>
            </div>
        </div>
    </div>
</form>